.container {
  width: 750rpx;
}

.top {
  background-color: #fff;
  font-size: 0;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 2rpx solid #f0f0f0;
  color: #353535;
  display: flex;
  flex-direction: row;
  width: 750rpx;
}

.t_left {
  max-width: 560rpx;
  margin-left: 30rpx;
  font-size: 30rpx;
}

.t_right {
  font-size: 24rpx;
  margin-left: 440rpx;
  color: #9a9a98;
  cursor: pointer;
  float: right;
}

.middle {
  width: 100%;
  height: 470rpx;
  display: flex;
  flex: 1;
  justify-content: center;
}

.img {
  height: 200rpx;
  width: 710rpx;
  margin: 5rpx 20rpx 0 20rpx;
  border-radius: 6rpx;
}

.text {
  width: 690rpx;
  height: 180rpx;
  align-items: center;
  border-bottom: 2rpx solid #f4f4f4;
}

.box {
  width: 690rpx;
  height: 160rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.left {
  width: 120rpx;
  height: 120rpx;
  border-radius: 6rpx;
}

.right {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.t_middle {
  display: flex;
  flex-direction: column;
  width: 440rpx;
  height: 100rpx;
  justify-content: space-around;
  margin-left: 35rpx;
}

.txt1 {
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 30rpx;
}

.txt2 {
  margin-top: 10px;
  min-height: 16px;
  color: #999;
  font-size: 12px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.consult {
  height: 50px;
  line-height: 50px;
  border-bottom: 1px solid #f0f0f0;
  text-align: center;
  font-size: 35rpx;
  color: #353535;
}

.left_line {
  display: inline-block;
  width: 12px;
  height: 1px;
  background-color: #d9d9d9;
  vertical-align: middle;
  margin-right: 13px;
}

.right_line {
  display: inline-block;
  width: 12px;
  height: 1px;
  background-color: #d9d9d9;
  vertical-align: middle;
  margin-left: 13px;
}

.content {
  width: 750rpx;
}

.c_text {
  display: flex;
  flex-direction: row;
  line-height: 90rpx;
  align-items: center;
  padding-left: 25rpx;
}

.c_txt1 {
  color: #f00;
}

.c_txt2 {
  font-size: 36rpx;
  margin-left: 12rpx;
}

.c_input {
  margin-left: 25rpx;
  width: 700rpx;
  background: #f7f7f7;
  border-color: #f7f7f7;
  padding: 8px 19px;
  color: #353535;
  font-size: 14px;
  height: 40px;
  box-sizing: border-box;
  border-radius: 2px;
}

.c_text1 {
  flex-direction: row;
  width: 700rpx;
  margin-left: 25rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.c_txt3 {
  color: #666;
  font-size: 14px;
  font-weight: lighter;
  height: 40px;
  background-color: #f7f7f7;
  width: 155rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.c_message {
  width: 680rpx;
  margin-left: 25rpx;
}

.textarea {
  margin-top: 10rpx;
  padding: 20rpx 0 0 20rpx;
  min-height: 100px;
  resize: none;
  padding-top: 20rpx;
  width: 100%;
  background: #f7f7f7;
  border-color: #f7f7f7;
  color: #353535;
  font-size: 14px;
  height: 50px;
}

.c_text2 {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 700rpx;
  margin: 30rpx 0 50rpx 25rpx;
}

.c_btn {
  color: #fff;
  font-size: 30rpx;
  width: 600rpx;
  background-color: orange;
  text-align: center;
}
